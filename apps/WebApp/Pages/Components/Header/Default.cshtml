@model Mileage.WebApp.Pages.Components.Header.HeaderModel
@{
	ArgumentNullException.ThrowIfNull(Model);
}

<header class="d-print-none" role="navigation">
	<nav class="navbar navbar-expand-md navbar-dark">
		<div class="container">
			<div class="d-flex flex-grow-1">
				<a asp-page="/Journeys/Index" asp-page-handler="Lists" class="navbar-brand" title="Mileage">Mileage Tracker</a>
				<div class="w-100 text-end d-flex align-items-center justify-content-end">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
						<i class="fas fa-bars"></i>
					</button>
				</div>
			</div>
			<div class="collapse navbar-collapse" id="navbarMain" navbar>
				<ul class="navbar-nav ms-auto flex-nowrap flex-row justify-content-end">
					@foreach (var item in Model.Menu.Items)
					{
						<li class="nav-item">
							<a class="nav-link ps-3" asp-page="@item.Page" title="@item.Text">@item.Text</a>
						</li>
					}
				</ul>
			</div>
		</div>
	</nav>
</header>

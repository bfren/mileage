@model Mileage.WebApp.Pages.Components.Place.PlaceModel

@{
	var data = new
	{
		id = Model.Id.Value,
		target = Model.JourneyId is null ? "settings" : Model.JourneyId.Value.ToString()
	};

	var text = string.IsNullOrEmpty(Model.Description) ? "not set" : Model.Description.Trim();
}

<span class="place token">
	<a href="javascript:void(0)" class="link-primary" data-id="@data.id" data-target="@data.target">@text</a>
</span>

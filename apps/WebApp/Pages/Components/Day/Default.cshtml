@model Mileage.WebApp.Pages.Components.Day.DayModel

@{
	ArgumentNullException.ThrowIfNull(Model);

	var tokenId = Rnd.Str;
}

<span id="@tokenId" class="day token">
	<a href="javascript:void(0)" class="link-primary" data-update="@Model.UpdateUrl" data-replace="@tokenId" data-target="@Model?.JourneyId?.Value">@Model?.Day.ToString("yyyy-MM-dd")</a>
</span>

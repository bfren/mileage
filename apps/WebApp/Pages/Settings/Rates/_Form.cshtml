@using Jeebs.Extensions
@model Domain.GetRate.GetRateModel?
@{
	Layout = null;
	var formId = Rnd.Str;
}

<form id="@formId" class="row row-cols-md-auto g-3 align-items-center needs-validation" action="@Url.Page("Index", "Form")" method="post" data-replace="rates" data-replace-contents="true" novalidate>

	<!-- Hidden Values -->
	@Html.AntiForgeryToken()
	@Html.HiddenForId(m => m!.Id)
	@Html.HiddenFor(m => m!.Version)

	<!-- Car Details -->
	<div class="col-12">
		@Html.LabelFor(m => m!.Id, Model is null ? "New" : Model.Id.Value.ToString(), new { @class = "fw-bold" })
	</div>

	<div class="col-12 position-relative">
		@Html.LabelFor(m => m!.AmountPerMileGBP, new { @class = "visually-hidden" })
		<input type="number" class="form-control select-on-load"
			   name="@Html.NameFor(m => m!.AmountPerMileGBP)"
			   id="@Html.NameFor(m => m!.AmountPerMileGBP)"
			   placeholder="Amount Per Mile in GBP"
			   value="@Model?.AmountPerMileGBP.ToString("0.00")"
			   min="0"
			   max="2"
			   step="0.01"
			   required />
		<div class="invalid-tooltip">Please enter a description.</div>
	</div>

	<!-- Buttons -->
	<div class="col-12">
		<button class="btn btn-secondary btn-cancel">Cancel</button>
		<button type="submit" class="btn btn-primary btn-save">Save</button>
	</div>

</form>

<script type="text/javascript">
	selectInputOnLoad();
	setupSaveFormOnEnter("#@formId");
	setupReloadFormOnCancel("#@formId", "rate", $("#save-rate"));
</script>

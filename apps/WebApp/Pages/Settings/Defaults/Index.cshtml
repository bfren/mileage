@page
@model Mileage.WebApp.Pages.Settings.Defaults.IndexModel
@{
	var settings = Model.Settings;
}

<div class="mt-3">
	<vc:car
		label="Default Car"
		update-url="@Url.Page("Index", "EditCar")"
		value="@settings.DefaultCarId"
		journey-id="null"
	/>
</div>

<div class="mt-3">
	<vc:from-place
		label="Default Starting Place"
		update-url="@Url.Page("Index", "EditFromPlace")"
		value="@settings.DefaultFromPlaceId"
		journey-id="null"
	/>
</div>

<div class="mt-3">
	<vc:rate
		label="Default Rate"
		update-url="@Url.Page("Index", "EditRate")"
		value="@settings.DefaultRateId"
		journey-id="null"
	/>
</div>

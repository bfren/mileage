@model WebApp.Pages.Settings.Cars.DeleteModel
@{
	Layout = "Modals/DeleteModal";
}

<form action="@Url.Page("Index", "Delete")"
	  method="post"
	  data-replace="places"
	  data-replace-contents="true">

	<div>
		@Model?.Car.Description
		@if (Model?.Car.NumberPlate is string plate)
		{
			<text> (@plate)</text>
		}
	</div>

	@Html.AntiForgeryToken()
	@Html.HiddenForId(m => m.Car.Id)

</form>

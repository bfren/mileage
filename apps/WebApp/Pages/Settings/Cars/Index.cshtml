@page
@model Mileage.WebApp.Pages.Settings.Cars.IndexModel
@{
    Layout = null;
}

<h3>Cars</h3>


<ul class="list-group w-100">
    @foreach (var c in Model.Cars)
    {
        <li class="list-group-item"
            data-id="@c.Id">
            <div class="d-flex justify-content-between align-items-start">
                <div class="me-auto mb-1 mb-sm-0">@c.Description</div>
                <button type="button" class="btn btn-danger"><i class="fa-solid fa-circle-minus"></i></button>
            </div>
        </li>
    }
</ul>

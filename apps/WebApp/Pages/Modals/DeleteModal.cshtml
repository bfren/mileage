@model Mileage.WebApp.Pages.Modals.ModalModel
@{
	ArgumentNullException.ThrowIfNull(Model);
}

<div id="@Rnd.Str" class="modal fade" data-bs-backdrop="false" data-bs-focus="false">
	<div class="modal-dialog modal-dialog-centered @Model.Size">
		<div class="modal-content shadow">
			<div class="modal-header">
				<h5 class="modal-title">Delete @Model.Title</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div>Are you sure you want to delete this @Model.Title?</div>
				@RenderBody()
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-danger btn-delete">Delete</button>
			</div>
		</div>
	</div>
</div>

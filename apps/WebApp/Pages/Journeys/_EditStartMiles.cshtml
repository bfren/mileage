@model Mileage.WebApp.Pages.Journeys.EditStartMilesModel
@{
	ArgumentNullException.ThrowIfNull(Model);

	Model.Title += $" (Journey {Model.Journey.Id.Value})";
	Layout = "Modals/UpdateModal";
}

<form method="post" action="@Url.Page("Index", "EditStartMiles")">
	<label for="@Html.NameFor(x => x.Journey.StartMiles)">Please enter the starting miles:</label>
	@Html.TextBoxFor(x => x.Journey.StartMiles, htmlAttributes: new { @class = "form-control", type = "number", required = true })

	@Html.HiddenForId(x => x.Journey.Id)
	@Html.HiddenFor(x => x.Journey.Version)
	@Html.AntiForgeryToken()
</form>

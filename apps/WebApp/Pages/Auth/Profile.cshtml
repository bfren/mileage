@page
@model Mileage.WebApp.Pages.Auth.ProfileModel
@{
	var emailName = Html.NameFor(x => x.Profile.EmailAddress);
	var name = Html.NameFor(x => x.Profile.FriendlyName);
	var givenName = Html.NameFor(x => x.Profile.GivenName);
	var surname = Html.NameFor(x => x.Profile.FamilyName);
}

<div class="container" id="profile">
	<h2>Profile</h2>

	<div class="row mb-3">
		<label class="col-sm-4 col-form-label" for="@emailName.Normalise()">Email Address</label>
		<div class="col-sm-8">
			<input type="email" class="form-control-plaintext" value="@Model.Profile.EmailAddress" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-4 col-form-label" for="@name.Normalise()">Name for Reports</label>
		<div class="col-sm-8">
			<input type="text" class="form-control-plaintext" value="@Model.Profile.FriendlyName" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-4 col-form-label" for="@givenName.Normalise()">Given Name</label>
		<div class="col-sm-8">
			<input type="text" class="form-control-plaintext" value="@Model.Profile.GivenName" />
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-4 col-form-label" for="@surname.Normalise()">Family Name</label>
		<div class="col-sm-8">
			<input type="text" class="form-control-plaintext" value="@Model.Profile.FamilyName" />
		</div>
	</div>

	<div class="d-flex justify-content-end">
		<modal-update class="btn btn-secondary me-2" link="@Url.Page("Profile", "ChangePassword")" replace="">Change Password</modal-update>
		<modal-update class="btn btn-secondary" link="@Url.Page("Profile", "Edit")" replace="profile" replace-contents="false">Edit Profile</modal-update>
	</div>

</div>
